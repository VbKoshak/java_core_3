<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="clutch_mapper">

    <select id="getAll" resultMap="clutch_map">
        select c.value as clutch, s.char as sym, s.name as surface from clutch c join surface s on c.surface_id = s.surface_id;
    </select>

    <select id="getById" resultMap="clutch_map">
        select c.value as clutch, s.char as sym, s.name as surface from clutch c join surface s on c.surface_id = s.surface_id where c.clutch_Id = #{id};
    </select>

    <resultMap id="clutch_map" type="edu.solvd.mentoring.myBatis.model.ClutchModel" autoMapping="false">
        <id property="surface" column="surface"/>
        <result property="sym" column="sym"/>
        <result property="surface" column="surface"/>
        <result property="clutch" column="clutch"/>
    </resultMap>
</mapper>